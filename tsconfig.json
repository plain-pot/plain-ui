{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "vue",
      "webpack-env"
    ],
    "paths": {},
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "story/**/*.ts",
    "story/**/*.tsx",
    "story/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "node_modules/plain-utils",
    "node_modules/plain-loading"
  ],
  "exclude": [
    "node_modules"
  ]
}
