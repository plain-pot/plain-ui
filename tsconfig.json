{
  "compilerOptions": {
    "target": "es5",
    "strict": false,
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,

    "jsx": "preserve",
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",

    "home/**/*.ts",
    "home/**/*.tsx",
    "home/**/*.vue",

    "components/**/*.ts",
    "components/**/*.tsx",
    "components/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
